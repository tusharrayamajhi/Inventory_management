<body>
    <h1>Customer List</h1>
    <table border="1">
        <thead>
            <tr>
                <th>Customer ID</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Address</th>
                <th>PAN</th>
                <th>User ID</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% for(let customer of data){ %>
                <tr>
                    <td><%= customer.customer_id %></td>
                    <td><%= customer.name %></td>
                    <td><%= customer.phone %></td>
                    <td><%= customer.email %></td>
                    <td><%= customer.address %></td>
                    <td><%= customer.pan %></td>
                    <td><%= customer.user_id %></td>
                    <td>
                        <form action="/customer/edit" method="GET" style="display:inline;">
                            <input type="hidden" name="id" value="<%= customer.customer_id   %>">
                            <button type="submit">Edit</button>
                        </form>
                        <form class="deletecustomer" style="display:inline;">
                           <input type="hidden" name="id" value="<%=customer.customer_id%>">
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this unit?');">Delete</button>
                        </form>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</body>
<script src="/viewcustomer.js"></script>
</html>
