<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer List</title>
    <link rel="stylesheet" href="/table.css">
    
</head>
<body>
    <%- include("./success.ejs") %>
    <%- include("./errormessage.ejs") %>
    
    <%- include("./navbar.ejs") %>

    <div class="container">

    <h2 class="table_heading">Customer List</h2>

    <div class="table_div">
    <table border="1">
        <thead>
            <tr>
                <th>SN</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Address</th>
                <th>PAN</th>
                <th>Created By</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>

            <% data.result.forEach((customer,index)=>{ %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= customer.customer_name %></td>
                    <td><%= customer.customer_phone %></td>
                    <td><%= customer.customer_email%></td>
                    <td><%= customer.customer_address%></td>
                    <td><%= customer.customer_pan %></td>
                    <td><%= customer.name %></td>
                    <td>
                        <form action="/customer/edit" method="GET" style="display:inline;">
                            <input type="hidden" name="id" value="<%= customer.customer_id   %>">
                            <button class="btn btn-edit" type="submit">Edit</button>
                        </form>
                        <form class="deletecustomer" style="display:inline;">
                           <input type="hidden" name="id" value="<%=customer.customer_id%>">
                            <button class="btn btn-delete" type="submit" onclick="return confirm('Are you sure you want to delete this unit?');">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    </div>

    <!-- table column change button -->
    <div class="footer">
    
  
        <% if(data.total_page != 1){ %>
        <ul class="change_table">
            <% for(let i =1; i<= data.total_page; i++){ %>
                <li>
                <a href="?page=<%= i %>"><%= i %></a>
            </li>
              <% } %>
        </ul>
        <% } %>
      </div>
      
    
    </div>

    
    <div class="back_btn">
        <a href="/customer/add">Add New Customer</a>
    </div>

    <footer></footer>
    
</body>
<script src="/viewcustomer.js"></script>
</html>
