<body>
    <%- include("./navbar.ejs") %>

<div class="container">
    <h2>Company Registration Form</h2>
    <form id="addcompany">
        <div class="form-group">
            <label for="company_name">Company Name</label>
            <input type="text" id="company_name" name="company_name" required>
        </div>
        <div class="form-group">
            <label for="registration_no">Registration Number</label>
            <input type="text" id="registration_no" name="registration_no" required>
        </div>
        <div class="form-group">
            <label for="phone">Phone</label>
            <input type="tel" id="phone" name="phone" maxlength="10" required>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required>
        </div>
        <div class="form-group">
            <label for="pan_no">PAN/VAT</label>
            <input type="text" id="pan_no" name="pan_no" required>
        </div>
        
        <div class="form-group">
            <label for="address">Address</label>
            <input type="text" id="address" name="address" required>
        </div>
        <div class="form-group">
            <label for="country">Country</label>
            <input type="text" id="country" name="country" required>
        </div>
        <div class="form-group">
            <label for="state">State</label>
            <input type="text" id="state" name="state">
        </div>
        <div class="form-group">
            <label for="city">City</label>
            <input type="text" id="city" name="city">
        </div>
        <div class="form-group">
            <label for="zip">ZIP Code</label>
            <input type="number" id="zip" name="zip">
        </div>
        <div class="form-group">
            <label for="bank_name">Bank Name</label>
            <input type="text" id="bank_name" name="bank_name">
        </div>
        <div class="form-group">
            <label for="account_no">Account Number</label>
            <input type="text" id="account_no" name="account_no">
        </div>
       
        <div class="form-group">
            <label for="website">Website</label>
            <input type="url" id="website" name="website">
        </div>
        <div>
            <label for="vat">is company register in vat</label><br>
            <input type="checkbox" id="vat" name="vat">
          </div>

          <div>
            <label for="company_logo">company logo url</label><br>
            <input type="url" id="company_logo" name="company_logo">
          </div>
        <button type="submit">Submit</button>
    </form>
</div>
