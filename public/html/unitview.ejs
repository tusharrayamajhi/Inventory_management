<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Unit List</title>
    <link rel="stylesheet" href="/table.css">
</head>
<body>
    <%- include("./navbar.ejs") %>
    <div class="container">

    <h2 class="table_heading">Unit List</h2>

    <div class="table_div">
    
    <table border="1">
        <thead>
            <tr>
                <th>Unit Name</th>
                <th>short_name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% for (let unit of data) { %>
                <tr>
                    <td><%= unit.unit_name %></td>
                    <td><%= unit.short_name %></td>
                    <td>
                        <form action="/unit/edit" method="GET" style="display:inline;">
                            <input type="hidden" name="id" value="<%= unit.unit_id %>">
                            <button type="submit">Edit</button>
                        </form>
                        <form class="deleteunit" style="display:inline;">
                            <input type="hidden" name="id" value="<%= unit.unit_id %>">
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this unit?');">Delete</button>
                        </form>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
    </div>
    </div>
</body>
<script src="/unitview.js"></script>
</html>
