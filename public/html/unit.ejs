<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/common.css">
    <link rel="stylesheet" href="/common2.css">
</head>
<body>
    <%- include("./success.ejs") %>
    <%- include("./errormessage.ejs") %>

    <%- include("./navbar.ejs") %>

    <div class="container">

    <h2 class="create_heading">Add Unit</h2>

    <form id="unit_form" class="style_form">

        <!-- Unit Name -->
        <div class="input_field">
            <label for="name">Name</label>
            <input type="text" name="unit_name" id="name" required maxlength="100">
            <span id="err_name"></span>
            
        </div>

        <!-- Unit short name -->
        <div class="input_field">
            <label for="short_name">Short Name</label>
            <input type="text" name="short_name" id="short_name" required maxlength="100">
            <span id="err_short_name"></span>
        </div>

        <!-- Submit Button -->
        <div class="submit_btn padding">
            <button type="submit">Add unit</button>
        </div>
    </form>
</div>

<footer></footer>

</body>
<script src="/unit.js"></script>
</html>