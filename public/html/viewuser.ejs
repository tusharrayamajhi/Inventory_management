<body>

<h2>Users Table</h2>

<table border="2">
  <thead>
    <tr>
      <th>User ID</th>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Is Active</th>
      <th>Role</th>
      <th>Company ID</th>
      <th>created by</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% data.forEach(user => { %>
      <tr>
        <td><%= user.user_id %></td>
        <td><%= user.name %></td>
        <td><%= user.address || 'N/A' %></td>
        <td><%= user.phone || 'N/A' %></td>
        <td><%= user.email %></td>
        <td><%= user.is_active ? 'Yes' : 'No' %></td>
        <td><%= user.roles %></td>
        <td><%= user.company_id %></td>
        <td><%= user.created_by || 'N/A' %></td>
        
        <td>
          <a class="btn btn-edit" href="/user/edit?id=<%= user.user_id %>">Edit</a>
          <form class="deleteuser" style="display:inline;">
            <input type="hidden" name="id" value="<%= user.user_id %>">
            <button type="submit" onclick="return confirm('Are you sure you want to delete this user');">Delete</button>
        </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>


</body>
