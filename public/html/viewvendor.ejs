<body>
    <%- include("./navbar.ejs") %>

    <div class="container">

        <h2 class="table_heading">Vendors List</h2>
    
        <div class="table_div">
            <table border="1">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Vendor Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>pan no</th>
                        <th>Country</th>
                        <th>state</th>
                        <th>address</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                        <% for(let vendor of data){ %>
                            <tr>
                                <td><%= vendor.vendor_id %></td>
                                <td><%= vendor.vendor_name %></td>
                                <td><%= vendor.email %></td>
                                <td><%= vendor.phone %></td>
                                <td><%= vendor.pan_no %></td>
                                <td><%= vendor.country %></td>
                                <td><%= vendor.state %></td>
                                <td><%= vendor.address %></td>
                                <td>
                                    
                                    <a class="btn btn-edit" href="/vendor/edit?id=<%= vendor.vendor_id %>">Edit</a>
                                    <form class="deletevendor" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this vendor?');">
                                        <input type="hidden" name="id" value="<%= vendor.vendor_id %>">
                                        <button class="btn btn-delete" type="submit" class="delete-btn">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
    </div>

    
    <div class="back_btn">
        <a href="/vender/add">Add New vendor</a>
    </div>
    
    <footer></footer>
    
</body>
