<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vendors List</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid #ddd;
        }
        th, td {
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f4f4f4;
        }
        button {
            padding: 5px 10px;
            margin: 0 2px;
            border: none;
            cursor: pointer;
        }
        .edit-btn {
            background-color: #4CAF50;
            color: white;
        }
        .delete-btn {
            background-color: #f44336;
            color: white;
        }
    </style>
</head>
<body>
    <h1>Vendors List</h1>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Vendor Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>pan no</th>
                <th>Country</th>
                <th>state</th>
                <th>address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
                <% for(let vendor of data){ %>
                    <tr>
                        <td><%= vendor.vendor_id %></td>
                        <td><%= vendor.vendor_name %></td>
                        <td><%= vendor.email %></td>
                        <td><%= vendor.phone %></td>
                        <td><%= vendor.pan_no %></td>
                        <td><%= vendor.country %></td>
                        <td><%= vendor.state %></td>
                        <td><%= vendor.address %></td>
                        <td>
                            
                            <a href="/vendor/edit?id=<%= vendor.vendor_id %>">edit</a>
                            <form class="deletevendor" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this vendor?');">
                                <input type="hidden" name="id" value="<%= vendor.vendor_id %>">
                                <button type="submit" class="delete-btn">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% } %>
        </tbody>
    </table>
</body>
<script src="/viewvendor.js"></script>
</html>
