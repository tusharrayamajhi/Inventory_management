<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Vendor</title>
    <link rel="stylesheet" href="/common.css">
</head>
<body>
    <%- include("./navbar.ejs") %>

    <div class="container">

        <h2 class="create_heading">Create Vendor</h2>

        <form id="addvendor" class="style_form">

            <!-- Vendor Name -->
            <div class="input_field vendor_name">
                <label for="vendor_name">Vendor Name</label>
                <input type="text" id="vendor_name" name="vendor_name" required maxlength="100">
            </div>

            <!-- Email -->
            <div class="input_field">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" maxlength="50">
            </div>

            <!-- Phone -->
            <div class="input_field">
                <label for="phone">Phone</label>
                <input type="text" id="phone" name="phone" required pattern="\d{10}" maxlength="10" title="Enter a 10-digit phone number">
            </div>

            <!-- Pan_No/vat_no -->
            <div class="input_field">
                <label for="pan_no">Pan_No/Vat_No</label>
                <input type="text" id="pan_no" name="pan_no">
            </div>

            <!-- Country Name -->
            <div class="input_field">
                <label for="country">Country</label>
                <input type="text" id="country" name="country" required maxlength="50">
            </div>

            <!-- State Name -->
            <div class="input_field">
                <label for="state">State</label>
                <input type="text" id="state" name="state" maxlength="50">
            </div>

            <!-- Address Name -->
            <div class="input_field">
                <label for="address">Address</label>
                <textarea class="desc_textarea" id="address" name="address" required maxlength="100"></textarea>
            </div>

            
            <!-- Button -->
            <div class="input_field submit_btn">
                <button type="submit">Create Vendor</button>
            </div>

        </form>
    </div>

    <footer></footer>
    
</body>
<script src="/addvendor.js"></script>
</html>
