<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/table.css">
</head>
<body>
    <%- include("./navbar.ejs") %>
    <div class="container">

    <h2 class="table_heading">Brand Table</h2>

    <div class="table_div">
    <table border="1">
        <thead>
            <tr>
                <th>Unit Name</th>
                <th>short_name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
    <%for(let brand of data){%>
        <tr>
            <td><%= brand.brand_name%></td>
            <td><%= brand.brand_desc%></td>
            <td>
                <form action="/brand/edit" method="GET" style="display:inline;">
                    <input type="hidden" name="id" value="<%= brand.brand_id %>">
                    <button class="btn btn-edit" type="submit">Edit</button>
                </form>
                <form class="deletebrand" style="display:inline;">
                    <input type="hidden" name="id" value="<%= brand.brand_id %>">
                    <input type="hidden" name="id" value="<%= brand.brand_id %>">
                    <button class="btn btn-delete" type="submit" onclick="return confirm('Are you sure you want to delete this unit?');">Delete</button>
                </form>
            </td>
        </tr>
            <%}%>
        </tbody>
        </table>
    </div>
    </div>
</body>
<script src="/viewbrand.js"></script>
</html>