<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/login.css">
</head>
<body>

  <%- include("./errormessage.ejs") %>



	<div class="login_form">

    <!-- Login form container -->
    <form id="loginform">

      <h3>Log in with</h3>
      
      <!-- Email input box -->
      <div class="input_box">
        <label for="email">Email</label>
        <input class="items_input" type="email" id="email" name="email"  placeholder="Enter email address" required />
        <span id="error_email"></span>
      </div>

      <!-- Paswwrod input box -->
      <div class="input_box">
          <label for="password">Password</label>
          <input class="items_input" type="password" name="password" id="password"  placeholder="Enter your password" required />
          <span id="error_pass"></span>
          <div class="password_title">
            <a href="#">Forgot Password?</a>
          </div>
      </div>

      <span id="othererror"></span>

       <!-- Login button -->
      <button type="submit">Log In</button>
      <p class="text">Don't have an account? <a href="/auth/signup">Sign up</a></p>
    </form>
  </div>
</body>
<script src="/login.js"></script>
</html>