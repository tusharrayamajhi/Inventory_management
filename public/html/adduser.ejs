<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Form</title>
</head>
<body>
    <%- include("./navbar.ejs") %>

    <h2>Create/Update User</h2>
    <form id="adduser">
        <!-- Name -->
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required><br><br>

        <!-- Address -->
        <label for="address">Address:</label>
        <input type="text" id="address" name="address"><br><br>

        <!-- Phone -->
        <label for="phone">Phone:</label>
        <input type="text" id="phone" name="phone" maxlength="10" required><br><br>

        <!-- Email -->
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required><br><br>

        <!-- Password -->
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required><br><br>

        <!-- Is Active -->
        <label for="is_active">Is Active:</label>
        <input type="checkbox" id="is_active" name="is_active" value=1><br><br>

        <!-- Roles -->
        <label for="roles">Role:</label>
        <select id="roles" name="roles">
            <option selected value=""> select roles </option>
            <option value="admin">Admin</option>
            <option value="normal">Normal</option>
            <%if(data.user.roles == "superadmin"){%>
                <option value="superadmin">Superadmin</option>
            <%}%>
        </select><br><br>
        <%if(data.user.roles == "superadmin"){%>
        <label for="company">company:</label>
        <select id="company" name="company">
            <option value="" selected>select company</option>
            <% if(data.company){ %>
            <%for(let company of data.company){%>
                <option value="<%=company.company_id%>"><%=company.company_name%></option>
            <%}%>
            <%}%>
        </select><br><br>
        <%}%>

       
        <button type="submit">Save User</button>
    </form>
</body>
<script src="/adduser.js"></script>
</html>
