<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User and Company Details</title>
  <link rel="stylesheet" href="/common.css">
  <link rel="stylesheet" href="/setting.css">
</head>
<body>
  <%- include("./success.ejs") %>
  <%- include("./errormessage.ejs") %>
  
  <%- include("./navbar.ejs") %>

  <div class="container">
  <h1>User and Company Details</h1>

  <!-- User Details -->
  <section>
    <h2 class="create_heading">User Details</h2>
    
    <div class="info">
      <div>
        <label>Name:</label>
        <p><%= data.users.name %></p>
      </div>
    </div>

    <div class="info">
      <div>
        <label>Address:</label>
        <p><%= data.users.address %></p>
      </div>

      <div>
        <label>Phone:</label>
        <p><%= data.users.phone %></p>
      </div>

    </div>

    <div class="info">
      <div>
        <label>Email:</label>
        <p><%= data.users.email %></p>
      </div>
      <div>
        <label>Roles:</label>
        <p><%= data.users.roles %></p>
      </div>
    </div>
    
    <div class="image">
      <label>User Image:</label>
      <img src="<%= data.users.user_image %>" alt="User Image">
    </div>

  </section>

  <!-- Company Details -->
  <section>
    <h2 class="create_heading">Company Details</h2>
    <div class="info">
      <div>
        <label>Company Name:</label>
        <p><%= data.company.company_name %></p>
      </div>
      <div>
        <label>Registration No:</label>
        <p><%= data.company.registration_no %></p>
      </div>
    </div>
    <div class="info">
      <div>
        <label>PAN/VAT No:</label>
        <p><%= data.company.pan_vat_no %></p>
      </div>
      <div>
        <label>Address:</label>
        <p><%= data.company.address %></p>
      </div>
    </div>
    <div class="info">
      <div>
        <label>Country:</label>
        <p><%= data.company.country %></p>
      </div>
      <div>
        <label>State:</label>
        <p><%= data.company.state %></p>
      </div>
    </div>
    <div class="info">
      <div>
        <label>City:</label>
        <p><%= data.company.city %></p>
      </div>
      <div>
        <label>ZIP:</label>
        <p><%= data.company.zip %></p>
      </div>
    </div>
    <div class="info">
      <div> 
        <label>Website:</label>
        <p><a href="<%= data.company.website %>" target="_blank"><%= data.company.website %></a></p>
      </div>
    </div>
    <div class="image">
      <label>Company Logo:</label>
      <img src="<%= data.company.company_logo %>" alt="Company Logo">
    </div>
  </section>

  <!-- Change Password Form -->
  <section class="change-password">
    <h2 class="create_heading">Change Password</h2>
    <form id="changepassword">
        <input type="hidden" id="user_id" name="user_id" value="<%= data.users.user_id %>">
      <div class="form-group">
        <label for="old_password">Old Password:</label>
        <input type="password" id="old_password" name="old_password" placeholder="Enter old password" required>
      </div>
      <div class="form-group">
        <label for="new_password">New Password:</label>
        <input type="password" id="new_password" name="new_password" placeholder="Enter new password" required>
      </div>
      <div class="form-group">
        <label for="confirm_password">Confirm New Password:</label>
        <input type="password" id="confirm_password" name="confirm_password" placeholder="Confirm new password" required>
      </div>
      <input type="submit" value="Change Password">
    </form>
  </section>
</div>
  <footer></footer>
  
</body>
<script src="/setting.js"></script>
</html>
