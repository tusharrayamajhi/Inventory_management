<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product List</title>
</head>
<body>
  <h1 style="text-align: center;">Product List</h1>
  
  <table border="1">
    <thead>
      <tr>
        <th>#</th>
        <th>Product Name</th>
        <th>Brand</th>
        <th>Unit</th>
        <th>VAT</th>
        <th>Selling Rate</th>
        <th>Stock</th>
        <th>Category</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
        <% for(let product of data){%>
            <tr>
                <td><%= product.product_id %></td>
                <td><%= product.product_name %></td>
                <td><%= product.brand%></td>
                <td><%= product.unit %></td>
                <td><%= product.vat ? 'Yes' : 'No' %></td>
                <td><%= product.selling_rate %></td>
                <td><%= product.stock %></td>
                <td><%= product.category || 'N/A' %></td>
                <td>
                  <a href="/product/edit?id=<%= product.product_id %>" style="text-decoration: none; color: blue;">Edit</a> 
                  <form class="deleteproduct">
                    <input type="hidden" name="id" value="<%= product.product_id %>">
                      <button  style="text-decoration: none; color: red;" type="submit" onclick="return confirm('Are you sure you want to delete this product?')">Delete</button>

                  </form> 
                </td>
              </tr>
            <% } %>
    </tbody>
  </table>

  <div style="text-align: center; margin-top: 20px;">
    <a href="/add-product" style="text-decoration: none; padding: 10px 20px; background-color: green; color: white; border: none; border-radius: 5px;">Add New Product</a>
  </div>
</body>
<script src="/viewproduct.js"></script>
</html>
