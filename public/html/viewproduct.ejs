<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product List</title>
  <link rel="stylesheet" href="/table.css">
</head>
<body>
  <%- include("./navbar.ejs") %>
  
  <div class="container">

    <h2 class="table_heading">Product List</h2>

    <div class="table_div">
      <table border="1">
        <thead>
          <tr>
            <th>SN</th>
            <th>Product Name</th>
            <th>Brand</th>
            <th>Unit</th>
            <th>VAT</th>
            <th>Selling Rate</th>
            <th>Stock</th>
            <th>Category</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
            <% data.forEach((product,index )=> {%>
                <tr>
                    <td><%= product.product_id %></td>
                    <td><%= product.product_name %></td>
                    <td><%= product.brand_name%></td>
                    <td><%= product.short_name %></td>
                    <td><%= product.vat ? 'Yes' : 'No' %></td>
                    <td><%= product.selling_rate %></td>
                    <td><%= product.stock %></td>
                    <td><%= product.category_name %></td>
                    <td>
                      <a class="btn btn-edit" href="/product/edit?id=<%= product.product_id %>" >Edit</a> 
                      <form class="deleteproduct" style="display:inline;">
                        <input type="hidden" name="id" value="<%= product.product_id %>">
                          <button class="btn btn-delete" type="submit" onclick="return confirm('Are you sure you want to delete this product?')">Delete</button>

                      </form> 
                    </td>
                  </tr>
                <% }) %>
        </tbody>
      </table>
    </div>
    </div>

  <div style="text-align: center; margin-top: 20px;">
    <a href="/product/add" style="text-decoration: none; padding: 10px 20px; background-color: green; color: white; border: none; border-radius: 5px;">Add New Product</a>
  </div>
</body>
<script src="/viewproduct.js"></script>
</html>
