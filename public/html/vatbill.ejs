<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bill</title>
  <style>
    /* Page layout */
    @page {
      size: 11.6cm 18.7cm; /* Set the custom page size */
      margin: 0;
    }

    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      width: 100%;
    }

    /* Main bill container */
    .bill-container {
      width: 11.6cm;
      height: 18.7cm;
      padding: 10mm;
      box-sizing: border-box;
      border: 1px solid #000;
    }

    /* Company info at the top */
    .company-info {
      text-align: center;
      margin-bottom: 10mm;
    }

    .company-info h1 {
      margin: 0;
      font-size: 16px;
      font-weight: bold;
    }

    .company-info p {
      margin: 5px 0;
      font-size: 12px;
    }

    .company-logo {
      width: 50px;
      height: 50px;
      background-color: #ddd;
      margin-bottom: 5mm;
    }

    /* Customer info */
    .customer-info {
      margin-bottom: 8mm;
      font-size: 12px;
    }

    .customer-info p {
      margin: 2px 0;
    }

    /* Table for products */
    .product-table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 8mm;
    }

    .product-table th, .product-table td {
      padding: 5px;
      text-align: left;
      border: 1px solid #000;
    }

    .product-table th {
      background-color: #f1f1f1;
    }

    /* Totals section */
    .totals {
      font-size: 14px;
      font-weight: bold;
      margin-top: 10mm;
    }

    .totals p {
      margin: 3px 0;
    }
  </style>
</head>
<body>

  <div class="bill-container">
    <!-- Company Info -->
    <div class="company-info">
      <div class="company-logo"></div>
      <h1><%= data.company.company_name%></h1>
      <p>VAT No: <%= data.company.pan_vat_no%></p>
      <p>Address: <%= data.company.address%></p>
      <p>Email: <%= data.company.email%></p>
    </div>

    <!-- Customer Info -->
    <div class="customer-info">
      <p><strong>Customer Name:</strong> <%= data.customers.name%></p>
      <p><strong>VAT No:</strong> <%= data.customers.phone %></p>
      <p><strong>Address:</strong> <%= data.customers.address %></p>
      <p><strong>Email:</strong> <%= data.customers.email %> </p>
      <p><strong>Phone:</strong> <%= data.customers.phone %></p>
    </div>

    <!-- Product Table -->
    <table class="product-table">
      <thead>
        <tr>
          <th>SN</th>
          <th>Product Name</th>
          <th>Quantity</th>
          <th>Unit</th>
          <th>Rate (per unit)</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% data.invoice.forEach((invoice,index) => {%>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= invoice.product_name %></td>
          <td><%= invoice.Quantity %></td>
          <td><%= invoice.short_name %></td>
          <td><%= invoice.rate %></td>
          <td><%= invoice.total %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>

    <!-- Total Amounts -->
    <div class="totals">
      <p><strong>Total Amount:</strong> <%=data.totals_detals.total_amt%></p>
      <p><strong>Total vatable Amount:</strong> <%=data.totals_detals.vatable_amt%></p>
      <p><strong>Vatable Amount:</strong> <%= data.totals_detals.vat_amt%></p>
      <p><strong>Total with VAT (13%):</strong> <%= data.totals_detals.total_include_vat%></p>
    </div>
  </div>

</body>
</html>
