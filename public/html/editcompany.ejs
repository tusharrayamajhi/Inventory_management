<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Company Details</title>
  <link rel="stylesheet" href="/common.css">
  <style>
    #isvat {
      height: 1rem;
      width: 1rem;
      font-size: 1rem;
      margin-top: 0.5rem;
    }

    #company_logo {
      border: none;
			margin: 0;
			padding: 0;
			width: 100%;
			text-align: center;
      height: 30px;
    }
  </style>
</head>
<body>
  <%- include("./navbar.ejs") %>
  
  <div class="container">
    <h2 class="create_heading">Edit Company Details</h2>

    <form id="editcompany" class="style_form">
      <input type="hidden" name="company_id" value="<%= data.company_id %>" />
      
      <div class="input_field">
        <label for="company_name">Company Name</label>
        <input type="text" id="company_name" name="company_name" value="<%= data.company_name %>" required />
      </div>

      <div class="input_field">
        <label for="company_code">Company code</label>
        <input type="text" id="company_code" name="company_code" value="<%= data.company_code %>" required />
      </div>

      <div class="input_field">
        <label for="registration_no">Registration No</label>
        <input type="text" id="registration_no" name="registration_no" value="<%= data.registration_no %>" required />
      </div>
      
      <div class="input_field">
        <label for="phone">Phone</label>
        <input type="tel" id="phone" name="phone" value="<%= data.phone %>" required />
      </div>

      <div class="input_field">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" value="<%= data.email %>" required />
      </div>

      <div class="input_field">
        <label for="DOJ">Date of Joining</label>
        <input type="date" id="DOJ" name="DOJ" value="<%= new Date(data.DOJ).toISOString().substring(0, 10) %>" required />
      </div>

      <div class="input_field">
        <label for="pan_vat_no">PAN/VAT No</label>
        <input type="text" id="pan_vat_no" name="pan_vat_no" value="<%= data.pan_vat_no %>" required />
      </div>

      <!-- is company register in vat -->
      <div class="input_field vat_varification">
        <span class="status">Status</span>
        <div class="active">
          <input type="checkbox" id="isvat" name="isvat" <%= data.isvat ? 'checked' : '' %> />
            <label for="isvat">VAT Registered</label>
        </div>
      </div>

      <div class="input_field">
        <label for="address">Address</label>
        <input type="text" id="address" name="address" value="<%= data.address %>" required />
      </div>

      <div class="input_field">
        <label for="country">Country</label>
        <input type="text" id="country" name="country" value="<%= data.country %>" required />
      </div>

      <div class="input_field">
        <label for="state">State</label>
        <input type="text" id="state" name="state" value="<%= data.state %>" required />
      </div>

      <div class="input_field">
        <label for="city">City</label>
        <input type="text" id="city" name="city" value="<%= data.city %>" required />
      </div>

      <div class="input_field">
        <label for="zip">ZIP Code</label>
        <input type="number" id="zip" name="zip" value="<%= data.zip %>" required />
      </div>

      <div class="input_field">
        <label for="bank_name">Bank Name</label>
        <input type="text" id="bank_name" name="bank_name" value="<%= data.bank_name %>" />
      </div>

      <div class="input_field">
        <label for="account_no">Account No</label>
        <input type="text" id="account_no" name="account_no" value="<%= data.account_no %>" />
      </div>

      <div class="input_field">
        <label for="bank_branch">Bank Branch</label>
        <input type="text" id="bank_branch" name="bank_branch" value="<%= data.bank_branch %>" />
      </div>

      <div class="input_field">
        <label for="bank_address">Bank Address</label>
        <input type="text" id="bank_address" name="bank_address" value="<%= data.bank_address %>" />
      </div>

      <div class="input_field">
        <label for="bank_code">Bank Code</label>
        <input type="text" id="bank_code" name="bank_code" value="<%= data.bank_code %>" />
      </div>

      <div class="input_field">
        <label for="website">Website</label>
        <input type="url" id="website" name="website" value="<%= data.website %>" />
      </div>

      <div class="input_field">
        <label for="company_logo">Company logo url</label><br>
        <div class="img_active">
          <input type="file" id="company_logo" name="image">
          <img src="<%= data.company_logo %>" alt="company_logo" id="view_company_image" style="width: 40px; height: 40px; ">
        </div>
      </div>

      <!-- button -->
      <div class="input_field submit_btn">
        <button type="submit">Update</button>
      </div>
      
    </form>
  </div>

  <div class="back_btn">
    <a href="/company/view">Back to Company List</a>
  </div>

  <footer>
    
  </footer>
</body>
<script src="/editcompany.js"></script>
</html>
